                    color: 0, 0, 0, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 100, 60
                spacing: 30
                RoundedButton:
                    text: 'Template'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'template'
                RoundedButton:
                    text: 'Template'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'template'
                RoundedButton:
                    text: 'Template'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'template'
                RoundedButton:
                    text: 'Template'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'template'

<CreditsScreen@Screen>:
    name: 'credits'
    FloatLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            FloatLayout:
                size_hint: 1, 0.08
                BackButton:
                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'start'
                Label:
                    text: 'Credits'
                    font_name: 'Trebuchet'
                    font_size: 70
                    pos_hint: {'center_x': .5, 'center_y': 0}
                    color: 0, 0, 0, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 100, 60
                spacing: 30
                Label:
                    text: credits_text
                    font_name: 'Trebuchet'
                    font_size: 20
                    color: 0, 0, 0, 1

<LevelDifficulty@Screen>:
    name: 'levelDifficulty'
    FloatLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            FloatLayout:
                size_hint: 1, 0.08
                BackButton:
                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'play'
                Label:
                    text: 'Level difficulty'
                    font_name: 'Trebuchet'
                    font_size: 70
                    pos_hint: {'center_x': .5, 'center_y': 0}
                    color: 0, 0, 0, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 100, 60
                spacing: 30

                RoundedButton:
                    text: 'Easy'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.updateDifficulty('easy')
                        root.manager.current = 'game'

                RoundedButton:
                    text: 'Medium'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.updateDifficulty('medium')
                        root.manager.current = 'game'

                RoundedButton:
                    text: 'Hard'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.updateDifficulty('hard')
                        root.manager.current = 'game'

                RoundedButton:
                    text: 'Impossible'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.updateDifficulty('impossible')
                        root.manager.current = 'game'